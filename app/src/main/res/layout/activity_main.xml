<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueSky"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:background="@drawable/style_inputs"
        android:drawableLeft="@drawable/ic_sharp_person"
        android:drawablePadding="12dp"
        android:hint="Введите email"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <EditText

        android:id="@+id/et_password"
        android:drawablePadding="12dp"
        android:background="@drawable/style_inputs"
        android:textColor="@color/white"
        android:hint="Введите пароль"
        android:layout_margin="22dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_lock_24" />


     <CheckBox
         android:id="@+id/check_remember_me"
         android:textColor="@color/white"
         android:text="Remember me"
         app:layout_constraintLeft_toLeftOf="@id/et_password"
         app:layout_constraintTop_toBottomOf="@id/et_password"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_login"
        android:background="@drawable/style_inputs22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:text="LOG IN"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/check_remember_me"/>


 <Button
     android:background="@drawable/style_inputs22"
     android:layout_margin="22dp"
     app:layout_constraintTop_toBottomOf="@id/btn_login"
     android:textColor="@color/black"
     android:text="SING UP"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     tools:ignore="MissingConstraints" />

<TextView
    android:id="@+id/check_forget_password"
    android:textColor="@color/white"
    android:text="Forget password"
    android:layout_margin="4dp"
    android:padding="2dp"
    android:drawableLeft="@drawable/ic_baseline_lock_24"
    app:layout_constraintRight_toRightOf="@id/et_password"
    app:layout_constraintTop_toBottomOf="@+id/et_password"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>




</androidx.constraintlayout.widget.ConstraintLayout>